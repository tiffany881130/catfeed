    <!-- Firebase SDK -->
    <script type="module">
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
        import { getAuth, signInWithEmailAndPassword, onAuthStateChanged, signOut, setPersistence, browserLocalPersistence } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js';
        import { getDatabase, ref, push, set, onValue, remove } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js';

        // âš ï¸ é‡è¦ï¼šè«‹å°‡ä¸‹æ–¹çš„ Firebase è¨­å®šæ›¿æ›æˆä½ è‡ªå·±çš„è¨­å®š
        const firebaseConfig = {
			apiKey: "AIzaSyAzZYj-dz6Ic7VREP4g9u7bVZY05fv85lU",
			authDomain: "catfeedreport.firebaseapp.com",
			databaseURL: "https://catfeedreport-default-rtdb.asia-southeast1.firebasedatabase.app",
			projectId: "catfeedreport",
			storageBucket: "catfeedreport.firebasestorage.app",
			messagingSenderId: "589895141084",
			appId: "1:589895141084:web:792cfdb33380c42cea1619"
		};

        // âš ï¸ ç®¡ç†å“¡å¯†ç¢¼ï¼šç”¨ä¾†æ¸…é™¤è³‡æ–™ï¼ˆç¶“éç°¡å–®æ··æ·†ï¼‰
        // ä½¿ç”¨ admin-password-generator.html ä¾†ç”¢ç”Ÿé€™å€‹åŠ å¯†å¯†ç¢¼
        const ADMIN_HASH = "46414e47333034303432"; // é è¨­æ˜¯ "admin8899"ï¼Œè¨˜å¾—æ”¹æˆä½ çš„å¯†ç¢¼

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const database = getDatabase(app);
        const feedingsRef = ref(database, 'feedings');

        const DAILY_LIMIT = 40;
        let allFeedings = {};
        let currentUser = null;

        // è¨­å®šæŒä¹…æ€§ç™»å…¥ï¼ˆ30å¤©ï¼‰
        setPersistence(auth, browserLocalPersistence);

        // æª¢æŸ¥ç™»å…¥ç‹€æ…‹
        onAuthStateChanged(auth, (user) => {
            if (user) {
                currentUser = user;
                showApp();
            } else {
                showLogin();
            }
        });

        // ç™»å…¥è¡¨å–®è™•ç†
        document.getElementById('loginForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const email = document.getElementById('emailInput').value;
            const password = document.getElementById('passwordInput').value;
            const loginBtn = document.getElementById('loginBtn');
            
            loginBtn.disabled = true;
            loginBtn.textContent = 'ç™»å…¥ä¸­...';
            
            try {
                await signInWithEmailAndPassword(auth, email, password);
                // ç™»å…¥æˆåŠŸæœƒè‡ªå‹•è§¸ç™¼ onAuthStateChanged
            } catch (error) {
                console.error('Login error:', error);
                document.getElementById('errorMessage').classList.add('show');
                document.getElementById('passwordInput').value = '';
                
                setTimeout(() => {
                    document.getElementById('errorMessage').classList.remove('show');
                }, 3000);
                
                loginBtn.disabled = false;
                loginBtn.textContent = 'ç™»å…¥';
            }
        });

        function showLogin() {
            document.getElementById('loginScreen').style.display = 'flex';
            document.getElementById('appContainer').classList.remove('show');
        }

        function showApp() {
            document.getElementById('loginScreen').style.display = 'none';
            document.getElementById('appContainer').classList.add('show');
            
            // é¡¯ç¤ºç”¨æˆ¶è³‡è¨Š
            const userEmail = currentUser.email;
            const userName = userEmail.split('@')[0]; // å– @ å‰é¢çš„éƒ¨åˆ†
            document.getElementById('userInfo').textContent = `ğŸ‘¤ ${userName}`;
            
            initializeApp();
        }

        async function logout() {
            if (confirm('ç¢ºå®šè¦ç™»å‡ºå—ï¼Ÿ')) {
                try {
                    await signOut(auth);
                    showToast('å·²ç™»å‡º');
                } catch (error) {
                    console.error('Logout error:', error);
                    showToast('ç™»å‡ºå¤±æ•—');
                }
            }
        }

        function initializeApp() {
            // ç›£è½è³‡æ–™è®ŠåŒ–
            onValue(feedingsRef, (snapshot) => {
                allFeedings = snapshot.val() || {};
                updateDisplay();
                
                const indicator = document.getElementById('syncIndicator');
                indicator.style.animation = 'none';
                setTimeout(() => {
                    indicator.style.animation = 'blink 2s infinite';
                }, 10);
            });

            // è¡¨å–®æäº¤
            document.getElementById('feedingForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const dryFood = parseFloat(document.getElementById('dryFood').value) || 0;
                const wetFood = parseFloat(document.getElementById('wetFood').value) || 0;
                
                if (dryFood === 0 && wetFood === 0) {
                    showToast('è«‹è‡³å°‘è¼¸å…¥ä¸€é …é£Ÿç‰©ä»½é‡');
                    return;
                }

                if (dryFood > 50 || wetFood > 20) {
                    showToast('è¼¸å…¥æ•¸å€¼ç•°å¸¸ï¼Œè«‹ç¢ºèªï¼');
                    return;
                }

                try {
                    await addFeeding(dryFood, wetFood);
                    
                    document.getElementById('dryFood').value = '';
                    document.getElementById('wetFood').value = '0';
                    
                    showToast('è¨˜éŒ„æˆåŠŸï¼');
                } catch (error) {
                    console.error('Error adding feeding:', error);
                    showToast('è¨˜éŒ„å¤±æ•—ï¼Œè«‹ç¨å¾Œå†è©¦');
                }
            });
        }

        async function addFeeding(dryFood, wetFood) {
            const now = new Date();
            const dateStr = getDateString(now);
            const timeStr = now.toLocaleTimeString('zh-TW', { hour: '2-digit', minute: '2-digit' });
            const userName = currentUser.email.split('@')[0];
            
            const newFeedingRef = push(ref(database, `feedings/${dateStr}`));
            await set(newFeedingRef, {
                time: timeStr,
                timestamp: now.getTime(),
                dryFood: dryFood,
                wetFood: wetFood,
                total: dryFood + wetFood,
                user: userName
            });
        }

        function updateDisplay() {
            updateTodaySummary();
            updateHistory();
        }

        function updateTodaySummary() {
            const today = getDateString(new Date());
            const todayData = allFeedings[today] || {};
            
            const totalToday = Object.values(todayData).reduce((sum, item) => sum + (item.total || 0), 0);
            
            document.getElementById('todayTotal').textContent = totalToday;
            
            const summaryDiv = document.getElementById('todaySummary');
            if (totalToday > DAILY_LIMIT) {
                summaryDiv.classList.add('warning');
            } else {
                summaryDiv.classList.remove('warning');
            }
        }

        function updateHistory() {
            const historyList = document.getElementById('historyList');
            
            const dates = [];
            for (let i = 0; i < 7; i++) {
                const date = new Date();
                date.setDate(date.getDate() - i);
                dates.push(getDateString(date));
            }
            
            const hasData = dates.some(date => allFeedings[date] && Object.keys(allFeedings[date]).length > 0);
            
            if (!hasData) {
                historyList.innerHTML = '<div class="no-data">å°šç„¡é¤µé£Ÿè¨˜éŒ„</div>';
                return;
            }
            
            let html = '';
            dates.forEach(dateStr => {
                const dayData = allFeedings[dateStr];
                if (!dayData || Object.keys(dayData).length === 0) return;
                
                const feedingArray = Object.entries(dayData).map(([key, value]) => ({
                    key,
                    ...value
                })).sort((a, b) => (b.timestamp || 0) - (a.timestamp || 0));
                
                const dayTotal = feedingArray.reduce((sum, item) => sum + (item.total || 0), 0);
                const isOverLimit = dayTotal > DAILY_LIMIT;
                
                html += `
                    <div class="day-record">
                        <div class="day-header">
                            <span class="day-date">${formatDateDisplay(dateStr)}</span>
                            <span class="day-total ${isOverLimit ? 'over-limit' : ''}">${dayTotal}å…‹</span>
                        </div>
                        <div class="feeding-list">
                `;
                
                feedingArray.forEach(item => {
                    const parts = [];
                    if (item.dryFood > 0) parts.push(`é£¼æ–™${item.dryFood}å…‹`);
                    if (item.wetFood > 0) parts.push(`ç½é ­${item.wetFood}å…‹`);
                    const userDisplay = item.user ? ` - ${item.user}` : '';
                    html += `<div class="feeding-item">${item.time} - ${parts.join('ã€')}${userDisplay}</div>`;
                });
                
                html += `
                        </div>
                    </div>
                `;
            });
            
            historyList.innerHTML = html;
        }

        async function clearAllData() {
            // å°‡ç®¡ç†å“¡å¯†ç¢¼å¾16é€²ä½è½‰å›æ–‡å­—
            const adminPassword = hexToString(ADMIN_HASH);
            
            const userInput = prompt('âš ï¸ æ­¤æ“ä½œç„¡æ³•å¾©åŸï¼\n\nè«‹è¼¸å…¥ç®¡ç†å“¡å¯†ç¢¼ï¼š');
            
            if (userInput === null) {
                return;
            }
            
            if (userInput !== adminPassword) {
                alert('âŒ ç®¡ç†å“¡å¯†ç¢¼éŒ¯èª¤ï¼');
                return;
            }
            
            if (confirm('ç¢ºå®šè¦æ¸…é™¤æ‰€æœ‰é¤µé£Ÿè¨˜éŒ„å—ï¼Ÿæ­¤å‹•ä½œç„¡æ³•å¾©åŸï¼')) {
                try {
                    await remove(feedingsRef);
                    showToast('è³‡æ–™å·²æ¸…é™¤');
                } catch (error) {
                    console.error('Error clearing data:', error);
                    showToast('æ¸…é™¤å¤±æ•—ï¼Œè«‹ç¨å¾Œå†è©¦');
                }
            }
        }
        
        function hexToString(hex) {
            let str = '';
            for (let i = 0; i < hex.length; i += 2) {
                str += String.fromCharCode(parseInt(hex.substr(i, 2), 16));
            }
            return str;
        }

        function getDateString(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        function formatDateDisplay(dateStr) {
            const date = new Date(dateStr + 'T00:00:00');
            const today = new Date();
            const yesterday = new Date(today);
            yesterday.setDate(yesterday.getDate() - 1);
            
            const dateCompare = getDateString(date);
            const todayCompare = getDateString(today);
            const yesterdayCompare = getDateString(yesterday);
            
            if (dateCompare === todayCompare) {
                return 'ä»Šå¤©';
            } else if (dateCompare === yesterdayCompare) {
                return 'æ˜¨å¤©';
            } else {
                return date.toLocaleDateString('zh-TW', { month: 'long', day: 'numeric' });
            }
        }

        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }

        window.clearAllData = clearAllData;
        window.logout = logout;
        
        // è¨»å†Š Service Workerï¼ˆPWA æ”¯æ´ï¼‰
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(registration => {
                        console.log('Service Worker è¨»å†ŠæˆåŠŸ:', registration);
                    })
                    .catch(error => {
                        console.log('Service Worker è¨»å†Šå¤±æ•—:', error);
                    });
            });
        }
    </script>
</body>
</html>
